# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/football_coach_db
# Alternative: SQLite for development
# DATABASE_URL=sqlite:///./football_coach.db

# Flask Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
FLASK_ENV=development
FLASK_DEBUG=True

# API Configuration
API_HOST=0.0.0.0
API_PORT=5000

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ACCESS_TOKEN_EXPIRES=3600  # 1 hour

# File Upload Configuration
MAX_CONTENT_LENGTH=100000000  # 100MB
UPLOAD_FOLDER=backend/data/raw
ALLOWED_EXTENSIONS=mp4,avi,mov

# YOLOv8 Configuration
YOLO_MODEL_PATH=backend/models/yolov8/yolov8n.pt
CONFIDENCE_THRESHOLD=0.5
IOU_THRESHOLD=0.45

# Soccernet API (Future)
SOCCERNET_API_KEY=your-soccernet-api-key
SOCCERNET_BASE_URL=https://api.soccernet.com

# Redis (for caching and job queues)
REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log 